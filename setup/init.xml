<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/list/persistentdocument/import/list_binding.xml" />
	<binding fileName="modules/notification/persistentdocument/import/notification_binding.xml" />
	<binding fileName="modules/media/persistentdocument/import/media_binding.xml" />
	<binding fileName="modules/catalog/persistentdocument/import/catalog_binding.xml" />

	<systemfolder module="list" relatedmodule="catalog">
		<staticlist listid="modules_catalog/pricesorting" label="&amp;modules.catalog.list.pricesorting;"
			description="&amp;modules.catalog.list.pricesorting-description;">			
			<staticitem value="10" label="&amp;modules.catalog.frontoffice.priceRange10;" />
			<staticitem value="50" label="&amp;modules.catalog.frontoffice.priceRange50;" />
			<staticitem value="100" label="&amp;modules.catalog.frontoffice.priceRange100;" />
			<staticitem value="200" label="&amp;modules.catalog.frontoffice.priceRange200;" />
			<staticitem value="500" label="&amp;modules.catalog.frontoffice.priceRange500;" />
			<staticitem value="501" label="&amp;modules.catalog.frontoffice.priceRangeMore;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/discounttypes" label="&amp;modules.catalog.bo.general.Discount-types-list;"
			description="&amp;modules.catalog.bo.general.Discount-types-list-description;">			
			<staticitem value="price" label="&amp;modules.catalog.bo.general.Discount-types-price;" />
			<staticitem value="percentage" label="&amp;modules.catalog.bo.general.Discount-types-percentage;" />
			<staticitem value="value" label="&amp;modules.catalog.bo.general.Discount-types-value;" />
		</staticlist>
				
		<staticlist listid="modules_catalog/discounttypesshort" label="&amp;modules.catalog.bo.general.Discount-types-short-list;"
			description="&amp;modules.catalog.bo.general.Discount-types-short-list-description;">			
			<staticitem value="percentage" label="&amp;modules.catalog.bo.general.Discount-types-percentage;" />
			<staticitem value="value" label="&amp;modules.catalog.bo.general.Discount-types-value;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/currencycode" label="&amp;modules.catalog.bo.general.Currency-code-list;"
			description="&amp;modules.catalog.bo.general.Currency-code-list-description;">
			<staticitem value="EUR" label="€" />
			<staticitem value="GBP" label="£" />
			<staticitem value="CHF" label="F" />
			<staticitem value="USD" label="$" />
			<staticitem value="CAD" label="$" />
			<staticitem value="AUD" label="$" />
			<staticitem value="NZD" label="$" />
			<staticitem value="JPY" label="¥" />
			<staticitem value="SEK" label="kr" />
			<staticitem value="NOK" label="kr" />
			<staticitem value="RUB" label="руб" />
			<staticitem value="ZAR" label="R" />
		</staticlist>
		
		<staticlist listid="modules_catalog/currencyposition" label="&amp;modules.catalog.bo.general.Currency-position-list;"
			description="&amp;modules.catalog.bo.general.Currency-position-list-description;">			
			<staticitem value="left" label="&amp;modules.catalog.bo.general.Currency-position-left;" />
			<staticitem value="right" label="&amp;modules.catalog.bo.general.Currency-position-right;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/weightunits" label="&amp;modules.catalog.bo.general.Weight-units-list-label;"
			description="&amp;modules.catalog.bo.general.Weight-units-list-desc;">			
			<staticitem value="mg" label="&amp;modules.catalog.frontoffice.weight-unit-mg-label;" />
			<staticitem value="g" label="&amp;modules.catalog.frontoffice.weight-unit-g-label;" />
			<staticitem value="kg" label="&amp;modules.catalog.frontoffice.weight-unit-kg-label;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/searchdisplaymodes" label="&amp;modules.catalog.bo.general.Search-modes-list-label;"
			description="&amp;modules.catalog.bo.general.Search-modes-list-desc;">			
			<staticitem value="all" label="&amp;modules.catalog.frontoffice.Search-all;" />
			<staticitem value="products" label="&amp;modules.catalog.frontoffice.Search-products;" />
			<staticitem value="others" label="&amp;modules.catalog.frontoffice.Search-others;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/taxcode" label="&amp;modules.catalog.bo.general.Taxcode;">			
			<staticitem value="0" label="&amp;modules.catalog.bo.general.No-tax;" />
			<staticitem value="1" label="19.6 %" />
			<staticitem value="2" label="5.5 %" />
			<staticitem value="3" label="8.5 %" />
		</staticlist>
		
		<staticlist listid="modules_catalog/crosssellingtypes" label="&amp;modules.catalog.bo.lists.cross-selling-types.label;"
			description="&amp;modules.catalog.bo.lists.cross-selling-types.description;">			
			<staticitem value="complementary" label="&amp;modules.catalog.bo.lists.cross-selling-types.Complementary;" />
			<staticitem value="upsell" label="&amp;modules.catalog.bo.lists.cross-selling-types.Upsell;" />
			<staticitem value="similar" label="&amp;modules.catalog.bo.lists.cross-selling-types.Similar;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/crosssellingsortby" label="&amp;modules.catalog.bo.lists.cross-selling-sortby.label;"
			description="&amp;modules.catalog.bo.lists.cross-selling-sortby.description;">			
			<staticitem value="fieldorder" label="&amp;modules.catalog.bo.lists.cross-selling-sortby.Fieldorder;" />
			<staticitem value="random" label="&amp;modules.catalog.bo.lists.cross-selling-sortby.Random;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/displaymode" label="&amp;modules.catalog.frontoffice.List-displaymode;">
			<staticitem value="list" label="&amp;modules.catalog.frontoffice.List-list;" />
			<staticitem value="table" label="&amp;modules.catalog.frontoffice.List-table;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/productpromotion" label="&amp;modules.catalog.frontoffice.Productpromotion-displaymode;">
			<staticitem value="random" label="&amp;modules.catalog.frontoffice.Productpromotion-random;" />
			<staticitem value="list" label="&amp;modules.catalog.frontoffice.List-list;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/lastconsultedproducts" label="&amp;modules.catalog.list.Lastconsultedproducts-label;">
			<staticitem value="compact" label="&amp;modules.catalog.list.Lastconsultedproducts-compact;" />
			<staticitem value="random" label="&amp;modules.catalog.list.Lastconsultedproducts-random;" />
			<staticitem value="list" label="&amp;modules.catalog.list.Lastconsultedproducts-list;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/discountornot" label="&amp;modules.catalog.frontoffice.Discountornot-title;">
			<staticitem value="discount" label="&amp;modules.catalog.frontoffice.Discountornot-discount;" />
			<staticitem value="not-discount" label="&amp;modules.catalog.frontoffice.Discountornot-not-discount;" />
		</staticlist>
		
		<staticlist listid="modules_catalog/recentlypublishedfields" label="Champs première/dernière date de publication"
			description="Liste des champs de date de première/dernière date de publication pour le filtre sur les produits récemment publiées.">
			<staticitem value="firstpublicationdate" label="&amp;modules.catalog.document.compiledproduct.firstpublicationdate;" />
			<staticitem value="lastpublicationdate" label="&amp;modules.catalog.document.compiledproduct.lastpublicationdate;" />
		</staticlist>
				
		<dynamiclist listid="modules_catalog/shopcurrency" label="Devises avec code" />
		
		<dynamiclist listid="modules_catalog/productsuggestionfeeders" label="Méthodes de suggestion des produits" />
		
		<dynamiclist listid="modules_catalog/shippingfiltersbyshop" label="Modes de livraison de la boutique" 
			description="Liste des modes de livraison d'une boutique boutique donnée en paramètre." />
		
		<dynamiclist listid="modules_catalog/declinationsbyproduct" label="Déclinaisons d'un produit" />
			
		<dynamiclist listid="modules_catalog/extendedattributes" label="Attributs étendus"
			description="Liste des attributs étendus de produit" />
			
		<dynamiclist listid="modules_catalog/shops" label="Boutiques" />
	</systemfolder>
		
	<systemfolder module="notification" relatedmodule="catalog">
		<notification label="Alerte concernant le stock"
			byCodename="modules_catalog/stockalert" template="default"
			availableparameters="{label}, {description}, {threshold}"
			subject="Alerte concernant le stock du produit &quot;{label}&quot;"
			header="Bonjour," body="Le produit &quot;{label}&quot; est passé en dessous du seuil d'alerte. Le seuil d'alerte pour ce produit est fixé à {threshold}." 
			footer="L'envoi de cette notification peut être configuré dans les préférénces du module Catalogue de Change." />
			
		<notification label="Nouvelle alerte activée (pour le client)"
			byCodename="modules_catalog/newalert" template="default"
			availableparameters="{productLabel}, {productDescription}, {productUrl}, {productLink}, {removeAlertUrl}, {removeAlertLink}, {alertEndDate}"
			subject="Nouvelle alerte activée"
			header="Bonjour," body="Votre alerte sur le produit &quot;{productLink}&quot; a bien été activée." 
			footer="Cette alerte restera active jusqu'au {alertEndDate} ({removeAlertLink})." />
			
		<notification label="Alerte de disponibilité d'un produit (pour le client)"
			byCodename="modules_catalog/availabilityalert" template="default"
			availableparameters="{productPriceWithTax}, {productPriceWithoutTax}, {productLabel}, {productDescription}, {productUrl}, {productLink}"
			subject="Le produit &quot;{productLabel}&quot; est à nouveau disponible !"
			header="Bonjour," body="Le produit &quot;{productLink}&quot; est à nouveau disponible."
			footer="Cette alerte a été automatiquement supprimée de notre base de données." />
			
		<notification label="Alerte de baisse de prix d'un produit (pour le client)"
			byCodename="modules_catalog/pricealert" template="default"
			availableparameters="{productPriceWithTax}, {productPriceWithoutTax}, {productLabel}, {productDescription}, {productUrl}, {productLink}"
			subject="Baisse de prix sur le produit &quot;{productLabel}&quot; !"
			header="Bonjour," body="Le prix du produit &quot;{productLink}&quot; a baissé. Il est maintenant de {productPriceWithTax}."
			footer="Cette alerte a été automatiquement supprimée de notre base de données. Pour être informé d'une éventuelle future baisse de prix, il vous faudra la réactiver depuis le site." />
		
		<notification label="Multiples alertes produits (pour le client)"
			byCodename="modules_catalog/severalalerts" template="default"
			availableparameters="{alertList}"
			subject="Multiples alertes produits"
			header="Bonjour," body="{alertList}"
			footer="Ces alertes ont été automatiquement supprimées de notre base de données. Pour être informé d'une éventuelle future baisse de prix, il vous faudra réactiver les alertes concernées depuis le site." />
	</systemfolder>
	
	<rootfolder module="media">
		<folder byLabel="Catalogue">
			<media path="modules/catalog/setup/default-visuals/default-detail-visual.png"
				byLabel="Visuel par défaut de détail de produit" title="Visuel non-disponible" id="default-detail-visual" />
			<media path="modules/catalog/setup/default-visuals/default-list-visual.png"
				byLabel="Visuel par défaut de liste de produit" title="Visuel non-disponible" id="default-list-visual" />
		</folder>
	</rootfolder>
	
	<rootfolder module="preferences">
		<catalogpreferences defaultDetailVisual-refid="default-detail-visual" defaultListVisual-refid="default-list-visual"  
							suggestcomplementaryfeederclass="catalog_SameShelvesProductFeeder"
							suggestsimilarfeederclass="catalog_SameShelvesProductFeeder"
							suggestupsellfeederclass="catalog_SameShelvesProductFeeder" />
	</rootfolder>	
			
	<rootfolder module="catalog">
		<attributefolder />
		<shopfolder />
		<noshelfproductfolder />
	</rootfolder>
</script>