		<field name="enableComments" />
	</section>
	<section labeli18n="modules.catalog.bo.general.Zones">
		<field name="shippingZone" hidehelp="true" />
		<field name="billingZone" hidehelp="true" />
	</section>
	<section labeli18n="modules.catalog.bo.general.Currency">
		<field name="currencyCode" hidehelp="true" listid="modules_catalog/shopcurrency" />
		<field name="currencyPosition" />
	</section>
	<section labeli18n="modules.catalog.bo.general.Prices">
		<field name="displayPriceWithTax" hidehelp="true" />
